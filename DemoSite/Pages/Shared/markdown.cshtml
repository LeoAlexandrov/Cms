@using Markdig;
@using HCms.ViewModels
@model Fragment

@{
	string id = Model.DomId;
	string md = Model.Props.text;
	string text = Markdown.ToHtml(md);

	var pict = Model.Props.picture;
}

<div id="@id" class="raw-html-fragment">
	@if (pict != null)
	{
		await Html.RenderPartialAsync("picture", new Fragment(Model, "picture", pict));
	}
	@Html.Raw(text)
</div>