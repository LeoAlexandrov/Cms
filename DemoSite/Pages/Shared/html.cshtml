@using HCms.ViewModels
@model Fragment

@{
	string id = Model.DomId;
	string text = Model.Props.text;

	var pict = Model.Props.picture;

	string extraFragmentClass = Model.Attributes?.GetValueOrDefault("bootstrap:class");
}

<div id="@id" class="html-fragment @extraFragmentClass">
@if (pict != null)
{
	await Html.RenderPartialAsync("picture", new Fragment(Model, "picture", pict));
}
@Html.Raw(text)
</div>